<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns="http://www.wabacus.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.wabacus.com ../xsd/wabacus.applications.xsd">
	<page id="in" js="/webresources/script/validate.js"  css="/webresources/component/tiny_mce/themes/advanced/skins/o2k7/ui.css">
	    <header>
			<![CDATA[<p align="center"><font size="6"><b>入库管理</b></font></p>]]>
		</header>
		<report id="report1" title="入库列表（只能修改最近三天的入库记录）" rowselect="multiple-checkbox" type="editablelist" interceptor="com.ims.interceptor.DeleteIn" >
				<display mouseoverbgcolor="CCCCCC" >
				<col column="{col-rowselect}" width="20"></col>
					<col column="id" label="编号"  displaytype="hidden"/>
					<col column="cattype" label="类型"  clickorderby="true" width="3%"/>
					<col column="inDate" label="入库日期"  clickorderby="true" datatype="date{yyyy-MM-dd}" width="8%"/>
					<col column="catno" label="货号"  clickorderby="true" width="8%"/>
					<col column="catname" label="名称"  clickorderby="true" width="20%"/>
					<col column="batchno" label="批号"  clickorderby="true" width="10%"/>
					<col column="num" label="数量"  datatype="int" clickorderby="true" width="5%"/>
					<col column="localPrice" label="单价RMB"  datatype="float" clickorderby="true" width="5%"/>
					<col column="dealer" label="供应商"  clickorderby="true" width="10%"/>
					<col column="producer" label="生产商"  clickorderby="true" width="10%"/>
					<col column="reason" label="入库原因"  clickorderby="true" width="15%"/>
					<col column="{editablelist-edit}" label="入库操作"></col>
				</display>
			<sql>
				<select>
					<value>
						<![CDATA[SELECT id,inDate,catno,catname,batchno,num,round(localPrice,2) localPrice,producer,dealer,(select codename from d_code where code=cattype and codetype='cattype') cattype,(select codename from d_code where code=reason and codetype='inreason') reason,person FROM b_in where  {#condition#}]]>
					</value>
					<condition name="txtid" hidden="true">
						<value>
						<![CDATA[(ID = '#data#' )]]>
						</value>
					</condition>
				</select>
				<insert pageurl="report{in_edit.report1}" popupparams="{title:'入库',width:800,height:400}"></insert>
				<update pageurl="report{in_edit.report1}" urlparams="txtid=@{id}"
						popupparams="{title:'修改入库',width:800,height:400}"></update>  
				<delete confirmessage="是否删除[@{batchno}]对应的记录？">
						delete from b_in where id=@{id__old};
					  </delete>		
			</sql>
			<format><!--
				<value>
					rrequest.getRequest().setAttribute("txtname",name);//存放request，以便显示标题时能取到
				</value>
			--></format>
		</report>
	</page>
	
</applications>